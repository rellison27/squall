import java.lang.Boolean;

CREATE TABLE  people_Entity(
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    first_name TEXT,
    last_name TEXT,
    nick_name TEXT,
    maiden_name TEXT,
    middle_name TEXT,
    profile_picture TEXT,
    archived INTEGER AS Boolean,
    email TEXT
);

CREATE TABLE  person_Phone(
    person_id INTEGER NOT NULL,
    home TEXT,
    mobile TEXT,
    work TEXT,
    FOREIGN KEY (person_id) REFERENCES people_Entity(id) ON DELETE CASCADE
);

selectAll:
SELECT *
FROM people_Entity;

insertPerson:
INSERT OR REPLACE
INTO people_Entity (
    id,
    first_name,
    last_name,
    nick_name,
    maiden_name,
    middle_name,
    profile_picture,
    archived,
    email
) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?);

insertPersonPhone:
INSERT OR REPLACE
INTO person_Phone (
    person_id,
    home,
    mobile,
    work
) VALUES (?, ?, ?, ?);

